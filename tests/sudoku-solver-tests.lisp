         (good-string "....2...12....96..53.....27.923761....71...3...69415.33......9.....6...57...3..1.")
         (good-grid (string-to-grid good-string))
         (bad-string-1 "....2...12....96..53.....272923761....71...3...69415.33......9.....6...57...3..1.")
